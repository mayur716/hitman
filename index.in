    .card:hover {
      background-color: rgba(255, 255, 255, 0.2);
      transform: scale(1.05);
    }

    footer {
      background-color: rgba(0, 0, 0, 0.2);
      padding: 20px;
      text-align: center;
      font-size: 1em;
    }
